<div class="container">
  <% flash.each do |name, msg| %>
  <div class="alert alert-<%= name %>">
    <a class="close" data-dismiss="alert">×</a>
    <%= msg %>
  </div>
<% end %>

  <h1>Questions</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">問題</th>
        <th scope="col">回答</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.content %></td>
          <td><%= question.answer %></td>
          <td class=pull-right >
            <%= link_to '詳細', question, class: 'btn btn-outline-primary float-right' %>
            <%= link_to '編集', edit_question_path(question), class: 'btn btn-outline-info float-right' %>
            <%= link_to '削除', question, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger float-right' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'クイズ作成', new_question_path, class: 'btn btn-outline-primary btn-block' %>
  <%= link_to 'トップへ戻る', root_path, class: 'btn btn-outline-info btn-block' %>
</div>
